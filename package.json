{
  "name": "hugo-games",
  "version": "1.0.0",
  "description": "Educational browser games focused on French language learning",
  "type": "module",
  "scripts": {
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:phrase-analyzer": "vitest run FrenchGrammarImposters/phrase-analyzer.test.js",
    "serve": "python -m http.server 8000"
  },
  "devDependencies": {
    "vitest": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "jsdom": "^23.0.0"
  },
  "keywords": [
    "education",
    "french",
    "games",
    "language-learning"
  ],
  "license": "MIT"
}